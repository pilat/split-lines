{
  "compilerOptions":{
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib":[
      "es6"
    ],
    "sourceMap": true,
    "rootDir": ".",

    // "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [
        { "name": "typescript-tslint-plugin" }
      ]
  },
  "typeRoots": [
    "./node_modules/@types"
  ],
  "types": [
    "node",
    "mocha"
  ],
  "exclude":[
    "node_modules",
    ".vscode-test",
    "tmp"
  ]
}